<h1>All Products</h1>

<table>
  <thead bgcolor="lightgray">
    <th>ID</th>
    <th>Price</th>
    <th>Name</th>
    <th>Description</th>
  </thead>
  <tbody bgcolor="lightblue">
    <% @products.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.price %></td>
        <td><%= link_to( p.title, product_path(p) ) %></td>
        <td><%= p.description %></td>
      </tr>

      <!-- <div>
        <% text = "#{p.id}. $ #{p.price} - #{p.title} (#{p.description})" %>
        <%= link_to( text, product_path(p) ) %>
      </div> -->

    <% end %>
  </tbody>
</table>
